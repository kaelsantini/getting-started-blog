<%  disable_form = controller.action_name == 'show' %>

<div class="row">
  <div class="col-md-12">
  <%= form_with model: @article do |form| %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", disabled: disable_form, autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_area :text, class: "form-control", disabled: disable_form, rows: "3" %>
    </div>

    <div class="text-right">
      <%= form.submit class: "btn btn-primary", data: { "disable-with":"Saving..." }, disabled: disable_form %>
    </div>

  <% end %>
  </div>
</div>
