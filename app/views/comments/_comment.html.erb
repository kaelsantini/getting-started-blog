
<table class="table">
  <thead>
  <tr>
      <th scope="col">Commenter</th>
      <th scope="col">Comment</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @article.comments.each do |comment| %>
      <tr>
          <td><%= comment.commenter %></td>
          <td><%= comment.body %></td>
          <td class="text-right"><%= link_to 'Destroy Comment', [comment.article, comment],
                       method: :delete,
                       data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
</table>
