<%= render "shared/header" %>

<main role="main">

  <div class="container">

    <div class="row justify-content-md-center">

      <div class="col-md-5 m-4">

        <div class="text-center">
          <%= image_tag("restrict_access2.png", :alt => "Restrict access") %>
          <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        </div>

        <%= form_with(model: @user, url: '/login', local: true, id: 'formLogin') do |form| %>

          <div class="form-group">
            <%= form.label :email, 'Email address', class: 'sr-only' %>
            <%= form.text_field :email, class: "form-control", placeholder: 'Email address', autofocus: true, required: true %>
          </div>

          <div class="form-group">
            <%= form.label :password, 'Password', class: 'sr-only' %>
            <%= form.password_field :password, class: "form-control", placeholder: 'Password', required: true %>
          </div>

          <%= form.submit 'Sign in', class: "btn btn-primary btn-block", data: { "disable-with":"Loading..." } %>

        <% end %>

        <% flash.each do |type, msg| %>
            <div id="errorMessage" class="alert alert-warning my-2 text-center" role="alert">
              <i class="fas fa-exclamation-triangle"></i> <%= msg %>
            </div>
        <% end %>

      </div>
    </div>

  </div>
</main>
