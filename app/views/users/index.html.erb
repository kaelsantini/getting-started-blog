<%= render "shared/header" %>

<main role="main">

  <div class="container">
      <h1>Listing Articles</h1>
      <div class="row">
        <div class="col-md-12 text-right">
          <%= link_to new_user_path, class: "btn btn-primary" do %>
            <i class="material-icons">add</i>New User
          <% end %>
        </div>
      </div>

      <div class="row">

        <table class="table">
          <thead>
          <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">E-mail</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% if @users.any? == false %>
              <tr><td>No Users</td></tr>
            <% end %>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            </tbody>
          </table>

      </div>
  </div>

</main>
